{
  "compilerOptions": {
    "lib": [
      "es6"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
  },
  "exclude": [
    "node_modules",
    "src/test",
    "lib",
    "lib-amd",
    "src/inputs/components_failure/*.ts",
    "src/inputs/modules_failure/*.ts"
  ]
}